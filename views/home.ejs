<body class="homeBody">
  <% if(message){ %>
  <div style="text-align: center" class="alert alert-<%=message.type%>">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%=message.intro%></strong> <%=message.message%>
  </div>
  <% } %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
  <div class="memeSubmission">
    <h1 class="homeLabel"><strong>Stream Memes</strong></h1>
    <form action="" method="POST">
      <div class="form-group">
        <label for="memeOwner">Meme Owner</label>
        <input type="text" class="form-control" name="memeOwner" placeholder="Enter your fullname">
      </div>
      <div class="form-group">
        <label for="caption">Caption</label>
        <input type="text" class="form-control" name="caption" placeholder="Be creative with the captions">
      </div>
      <div class="form-group">
        <label for="memeURL">URL</label>
        <input type="text" class="form-control" name="URL" placeholder="Enter URL of your meme here">
      </div>
      <button type="submit" class="btn btn-primary btn-lg button" name="submit">Submit</button>
    </form>
    <!-- <button type="submit" class="btn btn-info btn-lg button" id="viewButton" name="view"><a href="/memes"></a>View</button> -->
  </div>

  <!-- carousel for memes display -->
  <%var slideNumber=0;%>
  <div id="carouselExampleIndicators" class="carousel slide memeCarousel" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <%while(slideNumber<memes.length){%>
      <li data-target="#carouselExampleIndicators" data-slide-to=<%=slideNumber+1%>></li>
      <%slideNumber+=1;%>
      <%}%>
    </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block centerMeme"  src="/images/logo.jpg" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 style="color:red;">Caption name</h5>
                <p style="color:blue;">Owner name</p>
              </div>
            </div>
            <%slideNumber=0;%>
      <%while(slideNumber<memes.length){%>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%=memes[slideNumber].URL%>" alt="<%=slideNumber+1%> slide">
        <div class="carousel-caption d-none d-md-block">
          <h5 style="color:red;"><%=memes[slideNumber].caption%></h5>
          <p style="color:blue;"><%=memes[slideNumber].memeOwner%></p>
        </div>
      </div>
      <%slideNumber+=1;%>
      <%}%>
    </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
